﻿﻿﻿﻿﻿﻿﻿rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- YARDIMCI FONKSİYONLAR ---
    function isAuthenticated() { return request.auth != null; }
    function isAdmin() { 
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; 
    }
    function isClanMember(clanId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanId == clanId;
    }

    // --- TEMEL ERİŞİM ---
    // Oturum açan herkes her şeyi okuyabilir. Bu, okuma hatalarını tamamen ortadan kaldırır.
    match /{document=**} {
      allow read: if isAuthenticated();
    }

    // === USERS KOLEKSİYONU ===
    match /users/{userId} {
      // Her kullanıcı kendi profilini oluşturabilir ve güncelleyebilir (rolü hariç).
      // Admin her şeyi güncelleyebilir.
      allow write: if (request.auth.uid == userId && !(request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))) || isAdmin();
    }
    
    // === GAMES & YORUMLAR ===
    match /games/{gameId} {
      allow write: if isAdmin(); // Sadece admin oyun ekleyip silebilir
      match /comments/{commentId} {
        // Oturum açan herkes yorum yapabilir.
        // Yorum sahibi veya admin silebilir.
        allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
        allow delete: if isAdmin() || resource.data.uid == request.auth.uid;
      }
    }

    // --- GERİ BİLDİRİM & RAPORLAR ---
    // Sadece admin okuyabilir veya silebilir.
    match /feedback/{docId} {
      allow create: if isAuthenticated();
      allow write: if isAdmin();
    }
    match /user_reports/{docId} {
      allow create: if isAuthenticated() && request.resource.data.reporterUserId == request.auth.uid;
      allow write: if isAdmin();
    }
    
    // --- GENEL SOHBET & AYARLAR ---
    match /messages/{messageId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid || isAdmin();
      allow delete: if isAdmin() || resource.data.uid == request.auth.uid;
    }
    match /chat_meta/{docId} {
      allow write: if isAdmin(); // Sohbet ayarlarını sadece admin değiştirebilir
    }

    // =============================================================
    //       SORUNU ÇÖZECEK BASİTLEŞTİRİLMİŞ DM VE GRUP KURALLARI
    // =============================================================

    // --- KULLANICI-ADMİN DM SİSTEMİ (chats) ---
    match /chats/{chatId} {
      // Odayı, admin VEYA katılımcılardan biri oluşturabilir/güncelleyebilir.
      allow write: if isAdmin() || (isAuthenticated() && request.auth.uid in chatId.split('_'));

      match /messages/{messageId} {
        // Mesajı, admin VEYA katılımcılardan biri oluşturabilir.
        allow create: if isAdmin() || (isAuthenticated() && request.auth.uid in chatId.split('_'));
      }
    }
    
    // --- ÖZEL GRUP SOHBETLERİ (private_chat_rooms) ---
    match /private_chat_rooms/{roomId} {
      // Odayı sadece admin oluşturabilir/güncelleyebilir/silebilir.
      allow write: if isAdmin();

      match /messages/{messageId} {
        // Mesajı, admin VEYA katılımcılardan biri oluşturabilir.
        allow create: if isAdmin() || (isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/private_chat_rooms/$(roomId)).data.participants);
      }
    }
    
    // --- KLAN SİSTEMİ ---
    match /clans/{clanId} {
      // Klanlara erişim
      allow read, write: if isAuthenticated();
      
      // Klan mesajları - sadece klan üyeleri yazabilir
      match /messages/{messageId} {
        allow read: if isClanMember(clanId);
        allow create: if isClanMember(clanId) && request.resource.data.uid == request.auth.uid;
        allow delete: if isClanMember(clanId) && (request.auth.uid == resource.data.uid || isAdmin());
      }
      
      // Klan aktivite logları - sadece klan üyeleri okuyabilir, sistem yazabilir
      match /activityLog/{logId} {
        allow read: if isClanMember(clanId);
        allow create: if isAuthenticated(); // Sistem tarafından oluşturulur
        allow delete, update: if false; // Loglar silinemez/güncellenemez
      }
      
      // Klan katılma istekleri - sadece klan liderleri yönetebilir
      match /joinRequests/{requestId} {
        allow read: if isClanMember(clanId) && 
                    (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'leader' ||
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'officer');
        allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
        allow delete: if isClanMember(clanId) && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'leader' ||
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'officer');
      }
    }

    // --- DİĞER KOLEKSİYONLAR ---
    match /news/{docId} { allow write: if isAdmin(); }
    match /system/{docId} { allow write: if isAdmin(); }

    match /notifications/{notificationId} {
      allow create: if isAdmin();
      allow update, delete: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
    }
  }
}