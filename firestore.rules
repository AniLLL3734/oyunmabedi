﻿rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- YARDIMCI FONKSİYONLAR ---
    function isAuthenticated() { return request.auth != null; }
    function isAdmin() { 
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; 
    }
    function isClanMember(clanId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanId == clanId;
    }

    // --- HERKESE AÇIK OKUMA İZİNLERİ ---
    // Bu koleksiyonlardaki verileri, oturum açmamış kullanıcılar dahil HERKES okuyabilir.
    match /games/{gameId} {
        allow read: if true;
        allow write: if isAdmin();
        match /comments/{commentId} {
            allow read: if true;
            allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
            allow delete: if isAdmin() || resource.data.uid == request.auth.uid;
        }
    }
    match /admin_notes/{noteId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /news/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    match /chat_meta/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // ==============================================================================
    //       >>> KULLANICI KAYIT HATASINI ÇÖZEN ÖNEMLİ KURAL GÜNCELLEMESİ <<<
    // ==============================================================================
    match /users/{userId} {
      // (list): Kullanıcı adı/email'in alınıp alınmadığını kontrol eden `getDocs` ve
      // `where` sorgularına, giriş yapmamış kullanıcılar için bile izin ver.
      allow list: if true; 

      // (get): Tek bir kullanıcının detaylı profilini görmek (skor, rol vb.)
      // için mutlaka giriş yapmış olması (`isAuthenticated`) gerekir.
      allow get: if isAuthenticated(); 

      // (create): Sadece kimliği doğrulanmış bir kullanıcı, kendi UID'si ile
      // eşleşen bir kullanıcı belgesi oluşturabilir.
      allow create: if request.auth.uid == userId;
      
      // (update): Kullanıcı kendi profilini (rol hariç) güncelleyebilir veya admin güncelleyebilir.
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role)
                      || isAdmin();

      // (delete): Sadece admin kullanıcı silebilir.
      allow delete: if isAdmin();
    }
    // ==============================================================================
    //                              >>> BİTİŞ <<<
    // ==============================================================================

    // --- GERİ BİLDİRİM & RAPORLAR (Gizli kalmalı) ---
    match /feedback/{docId} {
      allow read, write: if isAdmin();
      allow create: if isAuthenticated();
    }
    match /user_reports/{docId} {
      allow read, write: if isAdmin();
      allow create: if isAuthenticated() && request.resource.data.reporterUserId == request.auth.uid;
    }
    
    // --- GENEL SOHBET (Sadece yetkisi olanlar görebilir) ---
    match /messages/{messageId} {
      allow read: if isAdmin() || (isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.chatAccessGranted == true);
      allow create: if isAdmin() || (isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.chatAccessGranted == true && request.resource.data.uid == request.auth.uid);
      allow delete: if isAdmin() || resource.data.uid == request.auth.uid;
    }

    // --- KULLANICI-ADMİN DM SİSTEMİ (chats) ---
    match /chats/{chatId} {
      allow read, write: if isAdmin() || (isAuthenticated() && request.auth.uid in chatId.split('_'));
      match /messages/{messageId} {
        allow read, create: if isAdmin() || (isAuthenticated() && request.auth.uid in chatId.split('_'));
      }
    }
    
    // --- ÖZEL GRUP SOHBETLERİ (private_chat_rooms) ---
    match /private_chat_rooms/{roomId} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.uid in resource.data.participants);
      allow write: if isAdmin();
      match /messages/{messageId} {
        allow read: if isAdmin() || (isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/private_chat_rooms/$(roomId)).data.participants);
        allow create: if isAdmin() || (isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/private_chat_rooms/$(roomId)).data.participants);
      }
    }
    
    // --- KLAN SİSTEMİ ---
    match /clans/{clanId} {
      allow read: if isAuthenticated(); 
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read: if isClanMember(clanId) || isAdmin();
        allow create: if isClanMember(clanId) && request.resource.data.uid == request.auth.uid;
        allow delete: if isAdmin() || (isClanMember(clanId) && request.auth.uid == resource.data.uid);
      }
      match /activityLog/{logId} {
        allow read: if isClanMember(clanId) || isAdmin();
        allow create: if isAuthenticated();
        allow write: if isAdmin();
        allow delete: if false;
      }
      match /joinRequests/{requestId} {
        allow read, delete: if isAdmin() || (isClanMember(clanId) && 
                      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'leader' ||
                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clanRole == 'officer'));
        allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      }
    }
    
    match /archived_clans/{clanId} {
      allow read, write: if isAdmin();
      match /activityLog/{logId} {
        allow read, write: if isAdmin();
      }
    }

    // --- SOHBET KATILIM İSTEKLERİ ---
    match /chat_join_requests/{requestId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // --- DİĞER KOLEKSİYONLAR ---
    match /system/{docId} { 
      allow read: if isAuthenticated();
      allow write: if isAdmin(); 
    }
    match /notifications/{notificationId} {
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
      allow create: if isAdmin();
      allow update, delete: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
    }
  }
}
